{
    "name": "massive/search-bundle",
    "description": "Massive Search Bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Daniel Leech",
            "email": "daniel.leech@massiveart.com"
        }
    ],
    "repositories": [
        {
            "type": "vcs",
            "url": "git@github.com:yukoff/zendframework-zendsearch.git"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=5.4.0",
        "jms/metadata": "^1.5",
        "symfony/property-access": "^2.7||^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8, <5.4",

        "zendframework/zend-stdlib": "^2.0||^3.0",
        "zendframework/zendsearch": "@dev",
        "elasticsearch/elasticsearch": "^2.1",
        "symfony-cmf/testing": "^1.3||^2.0",
        "symfony/symfony": "^2.7||^3.0",
        "matthiasnoback/symfony-dependency-injection-test": "^1.1||^2.0",
        "doctrine/doctrine-bundle": "^1.4",
        "doctrine/orm": "^2.5",

        "behat/behat": "^3.1.0",
        "behat/web-api-extension": "^1.0@dev",
        "behat/symfony2-extension": "^2.0@dev",
        "phpbench/phpbench": "^0.10",
        "phpbench/tabular": "@dev",

        "guzzlehttp/streams": "^3.0.0"
    },
    "suggest": {
        "sensio/distribution-bundle": "Required if the SearchScriptHandler is used",
        "zendframework/zendsearch": "To use the PHP based Zend Search library (based on Lucene)",
        "zendframework/zend-stdlib": "(dependency of zendsearch)",
        "elasticsearch/elasticsearch": "To use Elasticsearch"
    },
    "autoload": {
        "psr-4": {
            "Massive\\Bundle\\SearchBundle\\": ""
        }
    },
    "extra": {
        "branch-alias": {
            "dev-develop": "1.0-dev"
        }
    }
}
